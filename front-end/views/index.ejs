<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Raffi Estoque</title>

        <link rel="stylesheet" href="/styles/index.css">
    </head>
    <body>
        
        <div>
            <h1>Raffi Estoque</h1>
            <h2>Bem-vindo ao sistema de controle de estoque!</h2>
        </div>
        
        <div class="container-buttons">
            <button onclick="window.location.href='/cadastro-cliente'">
                <p>Cliente</p>
            </button>

            <button onclick="window.location.href='/cadastro-produto'">
                <p>Produto</p>
            </button>

            <button onclick="window.location.href='/cadastro-fornecedor'">
                <p>Fornecedor</p>
            </button>

            <button onclick="chamarBackend()">
                <p>Testar Backend Java</p>
            </button>
        </div>

    </body>

    <script>
        function chamarBackend() {
            fetch('/chamar-backend-java')
            .then(res => res.json())
            .then(data => {
                if (data.resposta) {
                console.log(data.resposta);
                } else {
                console.error('Resposta não encontrada');
                }
            })
            .catch(err => {
                console.log('Erro na requisição');
                console.error(err);
            });
        }
    </script>
</html>